    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@capacitor/android": "^5.5.0",
    "@capacitor/cli": "^5.5.0",
    "@capacitor/core": "^5.5.0",
    "browserify": "^17.0.1",
    "nodemon": "^3.0.1"
  }
