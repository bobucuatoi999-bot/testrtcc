{
  "name": "webrtc-signaling-server",
  "version": "1.0.0",
  "description": "WebRTC signaling server for video and voice calls",
  "main": "server-mediasoup.js",
  "scripts": {
    "start": "node server-mediasoup.js",
    "dev": "nodemon server-mediasoup.js",
    "build:mediasoup": "node build-mediasoup-bundle.js",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:build:android": "cd android && ./gradlew assembleRelease"
