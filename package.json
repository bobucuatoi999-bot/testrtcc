  "keywords": [
    "webrtc",
    "signaling",
    "video-call",
    "voice-call",
    "socket.io"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mediasoup": "^3.19.7",
